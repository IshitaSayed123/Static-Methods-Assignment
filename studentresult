package methods;
public class StudentResult {
	public static int total(int i, int j) {
		return i+j;
	}
	public static int average(int total) {
		return total/2;
	}
	public static void main(String[] args) {
		int i=12,j=28;
		System.out.println("Total:"+total(i,j));
		System.out.println("Average of two numbers is: "+average(total(i,j)));
	}
}
